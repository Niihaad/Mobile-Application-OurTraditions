<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstPage">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#F1EAEA"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="41dp">

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="12"
            android:fontFamily="serif"
            android:gravity="center"
            android:inputType="text"
            android:text="CALCULATRICE"
            android:textColor="#6032B3"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/baseline_calculate_24"
            android:layout_marginBottom="50dp"
            />

        <Button
            android:layout_gravity="center"
            android:id="@+id/buttonGoogle"
            android:layout_width="373dp"
            android:layout_height="58dp"
            android:layout_margin="8dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/google"
            android:text="Sign with Google"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="362dp"
            android:layout_marginRight="4dp"
            />

        <Button
            android:id="@+id/buttonFacebook"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="#3549B8"
            android:drawableLeft="@drawable/facebook"
            android:text="Sign with Facebook"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:layout_marginRight="4dp"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="362dp" />

        <Button
            android:id="@+id/buttonEmail"
            android:layout_gravity="center"
            android:layout_width="373dp"
            android:layout_height="65dp"
            android:layout_margin="8dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="#F83232"
            android:drawableLeft="@drawable/email"
            android:layout_marginRight="4dp"
            android:drawableTint="@color/white"
            android:text="Sign with Email"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="362dp" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>